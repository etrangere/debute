{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
           <div class="col-xs-12">
               <h1>Login</h1>
               <a href="{{ path('homepage')}} ">Back to home</a>

               {% if error %}
                   <div class="alert alert-danger">
                       {{ error.messageKey|trans(error.messageData,'security') }}</div>

               {% endif %}

              {{ form_start(form) }}

               {{ form_row(form._username) }}
               {{ form_row(form._password) }}

               <button type="submit" class="button">Login<span class="fa fa-lock"></span></button>

               &nbsp;



               {{ form_end(form) }}

               <a href="{{ path ('user_register') }}"><button type="submit" class="button">Go to register</button></a>

           </div>

        </div>

    </div>


{% endblock %}