{% extends 'base.html.twig' %}

{% block body %}
    <div id="header">
        <h1><?=$this-><?=page_title?></h1>
    </div>

    <div id="menu">
        <a href="{{ path("home_page") }}">Home</a><br><hr>
    </div>
    <div id="content">
        <form method="post">
            Title:
            <br/>
            <input type="text" name="form[title]" value="{{ form.title is defined ? form.title : '' }}" size="100"/>

            <br/>
            E-mail:
            <br/>
            <input type="text" name="form[email]" value="{{ form.email is defined ? form.email : '' }}" size="100"/>
            <br/>
            <br/>
            Content:
            <br/>
            <textarea name="form[content]" rows="40" cols="120">{{ form.content is defined ? form.content : '' }}</textarea>
            <br/>

            <input type="submit"  value="Add" />
        </form>
    </div>
    <div id="footer">
        All right reserved.Tel.Adress.
    </div>

{% endblock %}

